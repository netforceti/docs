.navbar {
    background-color: #0078d4;
    color: #ffffff;
}
.navbar .site-name {
    color: #ffffff;
}
.navbar .links {
    background-color: #0078d4;
    color: #ffffff;
}

button.verde{
    display: inline-block;
    font-size: 1.2rem;
    color: #fff;
    background-color: #107c10;
    padding: .8rem 1.6rem;
    border-radius: 2px;
    transition: background-color .1s ease;
    box-sizing: border-box;
    border: 0;
    cursor: pointer;
}
button.verde:hover{
    background-color: #0b6a0b;
}